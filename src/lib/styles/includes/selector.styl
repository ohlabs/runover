/**
 * Selector (style)
 * ----------------
 * Handles selector styling.
 * @since 0.1.0
 */

.runover-selector
  position fixed
  margin -10px 0 0 -10px
  padding 10px
  pointer-events none
  background hsla(red, 0.25)
  opacity 0
  transition opacity 150ms

  // make sure the selector is in
  // front of available content
  z-index 10**20
  transform translateZ(10**20px)

  /**
   * Shows selector while selecting mode is
   * activated, and there is no motion.
   * @since 0.1.0
   */

  [data-runover-selecting='true'] &
  [data-runover-motion='false'] &
    opacity 1

  [data-runover-selecting='true'][data-runover-cursor='false'] &
    pointer-events initial

  [data-runover-cursor='true'] &
    transition all 200ms
