.runover-selector
  position fixed
  pointer-events none
  background hsla(red, 0.3)
  transition opacity 150ms
  margin -10px 0 0 -10px
  padding 10px
  z-index 9999999999999999 // because of reasons
  transform translateZ(9999999999999999px) // because of the same reasons

  [data-runover-selecting='false'] &
  [data-runover-scrolling='true'] &
    opacity 0

  [data-runover-selecting='true'][data-runover-mousemove='false'] &
    pointer-events initial

  [data-runover-mousemove='true'] &
    transition all 150ms
