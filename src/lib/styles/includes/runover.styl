/**
 * Runover // runover.styl
 * @since 0.1.0
 */

.runover-content
  font-family 'Avenir Next', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif

/**
 * Disable user select for all elements
 * on page, while in selecting mode.
 * @since 0.1.0
 */

[data-runover-selecting="true"] *
  user-select none

/**
 * Disable pointer events for all runover elements while
 * scrolling, which optimizes overall scrolling performance.
 * @since 0.1.0
 */

[data-runover-motion='true'] [class^='runover-']
  pointer-events none !important
