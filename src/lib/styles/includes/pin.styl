.runover-annotation-pin
  position relative
  display inline-block
  font-family 'Arial', sans-serif
  font-size 0.6875rem
  font-weight 600
  color white
  line-height 100%
  min-width 28px
  height 28px
  border-radius 28px
  padding 7px 4px
  box-sizing border-box
  text-align center
  border 2px solid white
  box-shadow inset 0 1px 1px 0 hsla(black, 0.1), 0 1px 1px 0 hsla(black, 0.25)
  user-select none
  cursor default
  background #e25065
  spring-in-place runover-annotation-pin-bounce 1000ms, 7, 5, scale(0.2)

  &:after
    content ''
    position absolute
    top -100%
    bottom -100%
    left -100%
    right -100%
    background transparent

  &:before
    content ''
    position absolute
    top -100%
    bottom -100%
    left -100%
    right -100%
    background inherit
    border-radius 50px
    transform scale(0)
    z-index -1

  &:before
    animate 2000ms infinite,        \
      50.0% scale(0.75) opacity(0), \
      50.1% scale(0) opacity(1)
