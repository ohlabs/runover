  &:hover
  .runover-point-pin:hover + &
  [data-runover-editing='true'] &
    pointer-events all
    transform translate(-50%, 0)
    opacity 1

  [data-runover-motion='true'] &
    opacity 0
    transform translate(-50%, -5px)
    transition opacity 250ms, transform 250ms

