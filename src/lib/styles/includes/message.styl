.runover-point-text
  resize none
  border none
  outline 0
  padding 16px
  box-sizing border-box !important
  width 140px
  height 50px
  max-width 220px
  max-height 320px
  border-radius 4px
  box-shadow 0 2px 8px hsla(black, 0.2)
  font-family inherit
  line-height 1.25
  font-size 0.875rem
  font-weight 500
  color #555
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.runover-measure
  max-width 220px
  max-height 320px
  padding 16px
  box-sizing border-box

.runover-point-arrow

  &:before
  &:after
    content ''
    position absolute
    top 0
    left 50%
    size 12px
    margin -5px -6px
    border-radius 2px

  &:before
    box-shadow 1px 1px 8px hsla(black, 0.2)
    transform rotateZ(45deg)
    z-index -1

  &:after
    transform rotateZ(45deg)
    background linear-gradient( to bottom right, \
      white 8px, hsla(white, 0) 8px )
