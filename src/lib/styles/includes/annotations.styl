/**
 * Annotations (style)
 * -------------------
 * Handles points positioning.
 * @since 0.1.0
 */

.runover-points
  fixed top left
  pointer-events none

  // make sure the points are
  // in front of available content
  z-index 10**20

.runover-point
  position absolute
  pointer-events auto
  will-change transform
  transition opacity 300ms

  [data-runover-selecting='true'] &
    pointer-events none

  [data-runover-hidden='true'] &
    pointer-events none
    opacity 0
