.runover-annotation-pin
  position relative
  display inline-block
  font-family 'Arial', sans-serif
  font-size 0.6875rem
  font-weight 600
  color white
  line-height 100%
  min-width 28px
  height 28px
  border-radius 28px
  padding 7px 4px
  box-sizing border-box
  text-align center
  border 2px solid white
  box-shadow inset 0 1px 1px 0 hsla(black, 0.1), 0 1px 1px 0 hsla(black, 0.25)
  user-select none
  cursor default

  &:after
    content ''
    position absolute
    top -100%
    bottom -100%
    left -100%
    right -100%
    background transparent

  &:before
    content ''
    position absolute
    top -100%
    bottom -100%
    left -100%
    right -100%
    background inherit
    border-radius 50px
    transform scale(0)
    z-index -1

  &:before
    animation pulse 2000ms infinite

  &:nth-child(1)
    background #e25065

  &:nth-child(2)
    background #7ccc4d

@keyframes pulse
  50%
    transform scale(0.75)
    opacity 0
  50.1%
    transform scale(0)
    opacity 1
