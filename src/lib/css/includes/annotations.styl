.runover-annotations
  pointer-events none
  fixed 0
  backface-visibility hidden
  z-index 9999999999999999 // because of reasons

.runover-annotation
  position absolute
  will-change transform
  pointer-events initial
  transition transform 600ms

  for index in 1..20
    &:nth-child({index})
      transition-delay index * (-25ms)
